{
  "expo": {
    "name": "enflo",
    "slug": "enflo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "enflo",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "platforms": ["ios", "android"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.enflo.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.enflo.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-sqlite",
        {
          "enableFTS": true,
          "useSQLCipher": true,
          "android": {
            "enableFTS": false,
            "useSQLCipher": false
          },
          "ios": {
            "customBuildFlags": [
              "-DSQLITE_ENABLE_DBSTAT_VTAB=1 -DSQLITE_ENABLE_SNAPSHOT=1"
            ]
          }
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-localization",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Pretendard-Black.otf",
            "./assets/fonts/Pretendard-Bold.otf",
            "./assets/fonts/Pretendard-ExtraBold.otf",
            "./assets/fonts/Pretendard-ExtraLight.otf",
            "./assets/fonts/Pretendard-Light.otf",
            "./assets/fonts/Pretendard-Medium.otf",
            "./assets/fonts/Pretendard-Regular.otf",
            "./assets/fonts/Pretendard-SemiBold.otf",
            "./assets/fonts/Pretendard-Thin.otf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "Pretendard",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Pretendard-Thin.otf",
                    "weight": 100
                  },
                  {
                    "path": "./assets/fonts/Pretendard-ExtraLight.otf",
                    "weight": 200
                  },
                  {
                    "path": "./assets/fonts/Pretendard-Light.otf",
                    "weight": 300
                  },
                  {
                    "path": "./assets/fonts/Pretendard-Regular.otf",
                    "weight": 400
                  },
                  {
                    "path": "./assets/fonts/Pretendard-Medium.otf",
                    "weight": 500
                  },
                  {
                    "path": "./assets/fonts/Pretendard-SemiBold.otf",
                    "weight": 600
                  },
                  {
                    "path": "./assets/fonts/Pretendard-Bold.otf",
                    "weight": 700
                  },
                  {
                    "path": "./assets/fonts/Pretendard-ExtraBold.otf",
                    "weight": 800
                  },
                  {
                    "path": "./assets/fonts/Pretendard-Black.otf",
                    "weight": 900
                  }
                ]
              }
            ]
          }
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "project": "enflo",
          "organization": "taewoong-heo"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "0cf75680-6b95-4d73-932d-a3c3dac3811d"
      }
    }
  }
}
